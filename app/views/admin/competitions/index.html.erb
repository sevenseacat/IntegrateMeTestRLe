<h1>Competitions</h1>

<table class="table is-fullwidth is-hoverable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Entries</th>
      <th>Created On</th>
    </tr>
  </thead>
  <tbody>
    <% @competitions.each do |competition| %>
      <tr>
        <td><%= link_to competition.name, edit_admin_competition_path(competition) %></td>
        <td><%= competition.entries_count %></td>
        <td><%= l competition.created_at.to_date, format: :long %></td>
      </tr>
    <% end %>
  </tbody>
</table>
